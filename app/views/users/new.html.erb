<h1>Sign Up</h1><br>
<%= form_for @user do |f| %>
  <p>
    <%= f.label 'Name' %>
    <%= f.text_field :name %><br />
  </p>
  <p>
    <%= f.label 'Email' %>
    <%= f.text_field :email %><br />
  </p>
  <p>
    <%= f.label 'Password' %>
    <%= f.password_field :password %><br />
  </p>
  <p>
    <%= f.label 'Password Confirmation' %>
    <%= f.password_field :password_confirmation %><br />
  </p>

  <%= f.submit class: 'btn btn-large btn-success' %>
<% end %>